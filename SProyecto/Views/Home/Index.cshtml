@model Autenticacion
@{
    Layout = "_LayoutExterno";
}

<div class="auth-wrapper d-flex no-block justify-content-center align-items-center" style="background:url(/img/auth-bg.jpg) no-repeat center center;">
    <div class="auth-box">
        <div id="loginform">
            <div class="logo mb-4">
                <span class="db"><img src="~/img/logo-icon.png" alt="logo" /></span>
                <h5 class="font-medium m-b-20">Iniciar Sesión</h5>
            </div>

            <div class="row">
                <div class="col-12">

                    <form class="form-horizontal m-t-20" id="loginform" asp-controller="Home" asp-action="Index">

                      <input id="txtMensaje" type="hidden" value="@ViewBag.Mensaje" />

                      <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"><i class="ti-user"></i></span>
                            </div>
                            <input type="text" class="form-control form-control-lg" placeholder="Nombre Usuario" asp-for="NombreUsuario">
                        </div>

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon2"><i class="ti-pencil"></i></span>
                            </div>
                            <input type="password" class="form-control form-control-lg" placeholder="Contraseña" asp-for="Contrasenna">
                        </div>

                        <div class="form-group text-center">
                            <div class="col-xs-12 p-b-20">
                                <button class="btn btn-block btn-lg btn-info" type="submit">Procesar</button>
                            </div>
                        </div>

                        <div class="form-group m-b-0 m-t-10">
                            <div class="col-sm-12 text-center">
                                No tienes una cuenta <a href="authentication-register1.html" class="text-info m-l-5"><b>Registrate</b></a>
                            </div>
                            <div class="col-sm-12 text-center">
                                Olvidaste tu contraseña <a href="authentication-register1.html" class="text-info m-l-5"><b>Recupera el acceso</b></a>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery.min.js"></script>
<script src="~/js/index.js"></script>