@model Autenticacion
@{
    Layout = "_Layout";
}

<div class="col-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Actualizar Contraseña</h4>
        </div>
        <hr>

        <input id="Mensaje" type="hidden" value="@ViewBag.Mensaje">

        <form class="form-horizontal" asp-controller="Usuario" asp-action="CambiarContrasenna">
            <div class="card-body">

                <div class="form-group row">
                    <label for="title1" class="col-sm-3 text-right control-label col-form-label">Contraseña Nueva</label>
                    <div class="col-sm-6">
                        <input type="password" class="form-control" asp-for="Contrasenna">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="com12" class="col-sm-3 text-right control-label col-form-label">Confirmar Contraseña</label>
                    <div class="col-sm-6">
                        <input type="password" class="form-control" asp-for="ConfirmarContrasenna">
                    </div>
                </div>

            </div>

            <hr>

            <div class="card-body">
                <div class="form-group m-b-0 text-right">
                    <button type="submit" class="btn btn-info waves-effect waves-light">Procesar</button>
                </div>
            </div>

        </form>
    </div>
</div>


<script src="~/lib/jquery.min.js"></script>
<script src="~/js/comunes.js"></script>