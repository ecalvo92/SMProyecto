@model Autenticacion
@{
    Layout = "_Layout";
}

<div class="col-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Perfil de Usuario</h4>
        </div>
        <hr>

        <form class="form-horizontal" asp-controller="Usuario" asp-action="ActualizarPerfil">
            <div class="card-body">
                <div class="form-group row">
                    <label for="fullname" class="col-sm-3 text-right control-label col-form-label">Identificación</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" asp-for="Identificacion"
                               onkeyup="ConsultarPersonaApi();">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="title1" class="col-sm-3 text-right control-label col-form-label">Nombre</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" asp-for="Nombre">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="com12" class="col-sm-3 text-right control-label col-form-label">Correo Electrónico</label>
                    <div class="col-sm-6">
                        <input type="email" class="form-control" asp-for="CorreoElectronico">
                    </div>
                </div>

            </div>

            <hr>

            <div class="card-body">
                <div class="form-group m-b-0 text-right">
                    <button type="submit" class="btn btn-info waves-effect waves-light">Procesar</button>
                </div>
            </div>

        </form>
    </div>
</div>


<script src="~/lib/jquery.min.js"></script>
<script src="~/js/comunes.js"></script>